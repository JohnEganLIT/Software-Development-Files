<Window x:Class="WPF_Resources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush Color="Red" x:Key="ButtonColour"/>
    </Window.Resources>
    <StackPanel Margin="10">
        <Grid>
            <Grid.Resources>
                <SolidColorBrush Color="Blue" x:Key="ButtonColour" />
            </Grid.Resources>
            <Button Content="Button" Background="{StaticResource ButtonColour}" Width="100" Height="50" />
        </Grid>
        <Button Content="Button" Background="{StaticResource ButtonColour}" Width="100" Height="50" />
        <Button Content="Change Colour" Click="Button_Click" Margin="0 20 0 0" Width="100" Height="50" />
        <Button Content="Colour" Click="Button_Click" Margin="0 20 0 0" Background="{DynamicResource DynamicButtonColour}" Width="100" Height="50" />
    </StackPanel>
</Window>
